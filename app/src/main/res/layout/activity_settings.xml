<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainApp.Settings.SettingsActivity">


    <TextView
        android:id="@+id/settings_Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Settings"
        android:textColor="@color/colorTitle"
        android:textSize="32sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="15dp"
        />


    <Button
        android:id="@+id/settings_updateInfo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/colorButtonBackground"
        android:text="Update Information"
        android:textAllCaps="false"
        android:textColor="@color/colorButtonText"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.304"
        app:layout_constraintWidth_percent="0.8"
        />


    <Button
        android:id="@+id/settings_AboutButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/colorButtonBackground"
        android:text="About"
        android:textAllCaps="false"
        android:textColor="@color/colorButtonText"
        android:textSize="24sp"
        app:layout_constraintLeft_toLeftOf="@+id/settings_updateInfo"
        app:layout_constraintRight_toRightOf="@+id/settings_updateInfo"
        app:layout_constraintTop_toBottomOf="@+id/settings_updateInfo"
        android:layout_marginTop="20dp"
        />


    <Button
        android:id="@+id/settings_homeButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingLeft="12dp"
        android:paddingRight="35dp"
        android:textColor="@color/colorButtonText"
        android:background="@color/colorButtonBackground"
        android:drawableLeft="@drawable/home_icon"
        android:textAllCaps="false"
        android:text="@string/home"
        android:textSize="24sp"
        app:layout_constraintLeft_toLeftOf="@+id/settings_AboutButton"
        app:layout_constraintRight_toRightOf="@+id/settings_AboutButton"
        app:layout_constraintTop_toBottomOf="@+id/settings_AboutButton"
        android:layout_marginTop="20dp"
        />


    <Button
        android:id="@+id/settings_signOutButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Sign Out"
        android:textAllCaps="false"
        android:background="@color/colorButtonBackground"
        android:textColor="@color/colorButtonText"
        android:textSize="24sp"
        app:layout_constraintLeft_toLeftOf="@+id/settings_homeButton"
        app:layout_constraintRight_toRightOf="@+id/settings_homeButton"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/settings_homeButton"
        app:layout_constraintVertical_bias="0.7"
        />

</android.support.constraint.ConstraintLayout>