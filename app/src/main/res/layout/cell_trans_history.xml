<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="5dp"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:background="@drawable/about_background"
    android:layout_marginLeft="10dp"
    android:layout_marginStart="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginEnd="10dp"
    >

    <ImageView
        android:id="@+id/cell_trans_hist_icon"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/cell_trans_hist_layout"
        app:layout_constraintBottom_toBottomOf="@+id/cell_trans_hist_layout"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"

        />

    <android.support.constraint.ConstraintLayout
        android:id="@+id/cell_trans_hist_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/cell_trans_hist_icon"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        >

        <TextView
            android:id="@+id/cell_trans_hist_typeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mobile Check Deposit"
            android:textColor="@color/colorButtonBackground"
            android:textSize="18sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            />

        <TextView
            android:id="@+id/cell_trans_hist_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3/2/2018"
            android:textColor="@color/colorButtonBackground"
            android:textSize="18sp"
            android:layout_marginTop="6dp"
            app:layout_constraintTop_toBottomOf="@+id/cell_trans_hist_typeText"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_bias="0.1"
            />

        <TextView
            android:id="@+id/cell_trans_hist_transactionAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-$60.00"
            android:textColor="@color/colorButtonBackground"
            android:textSize="18sp"
            app:layout_constraintTop_toTopOf="@+id/cell_trans_hist_date"
            app:layout_constraintBottom_toBottomOf="@+id/cell_trans_hist_date"
            app:layout_constraintLeft_toRightOf="@+id/cell_trans_hist_date"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_bias="0.8"
            />

    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>

