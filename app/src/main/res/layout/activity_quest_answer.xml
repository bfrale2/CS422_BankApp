<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainApp.HelpPage.QuestAnswerActivity">


    <TextView
        android:id="@+id/questionHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Answer!"
        android:textSize="60dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/answerLine"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="12dp"
        android:background="@color/colorPrimary"
        app:layout_constraintLeft_toLeftOf="@id/questionHeader"
        app:layout_constraintLeft_toRightOf="@id/questionHeader"
        app:layout_constraintTop_toBottomOf="@id/questionHeader" />


    <TextView
        android:id="@+id/questionAnswerQuestionText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/answerLine"
        android:text="qiestopmn text goes here to test this out wel"
        android:textSize="20dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="15dp"
        android:textAlignment="center"
        android:textStyle="italic"
        />

    <TextView
        android:id="@+id/questionAnswerAnswer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/questionAnswerQuestionText"
        android:layout_marginTop="30dp"
        android:text="this is where the ansewr goes"
        android:textSize="20dp"
        android:textAlignment="center"
        android:textStyle="bold"
        />

    <Button
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:text="Go Back"
        android:textColor="@color/colorButtonText"
        android:textAllCaps="false"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginBottom="10dp"
        android:id="@+id/goBackButton"

        />



</android.support.constraint.ConstraintLayout>